<!-- app/views/sessions/new.html.erb -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Login</h1>
        </div>
        <div class="card-body">
          <%= form_tag '/login', class: 'form' do %>
            <div class="form-group">
              <%= label_tag :email %>
              <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email' %>
            </div>

            <div class="form-group">
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password' %>
            </div>

            <%= submit_tag 'Submit', class: 'btn btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
